#ifndef __LIBGDF__
#define __LIBGDF__

RUN apt-get update && \\
    apt-get install -y --no-install-recommends \\
        libboost-all-dev && \\
    rm -rf /var/lib/apt/lists && \\
    mkdir /var/lib/apt/lists

RUN pip install \\
        cffi \\
        llvmlite

RUN git clone --recursive "https://github.com/rapidsai/cudf" /opt/cudf && \\
    cd /opt/cudf/libgdf && \\
    mkdir build && \\
    cd build && \\
    cmake .. && \\
    make -j install && \\
    make copy_python && \\
    python setup.py install && \\
    cd ../.. && \\
    python setup.py install

RUN git clone "https://github.com/rapidsai/dask_gdf" /opt/dask_gdf && \\
    cd /opt/dask_gdf && \\
    python setup.py install

RUN pip install pyarrow

#endif // __LIBGDF__
