#ifndef __CUDF__
#define __CUDF__

#include "conda-ml-env"

RUN conda install -c numba -c conda-forge -c nvidia -c rapidsai -c defaults \\
        boost \\
        cffi \\
        cmake=3.13 \\
        Cython \\
        distributed \\
        llvmlite \\
        numba \\
        nvstrings=0.3.0 \\
        pandas>=0.23.4 \\
        pyarrow \\
        pytest && \\
    conda clean -ya

ENV NUMBAPRO_NVVM=/usr/local/cuda/nvvm/lib64/libnvvm.so
ENV NUMBAPRO_LIBDEVICE=/usr/local/cuda/nvvm/libdevice/
ENV CONDA_PREFIX=/opt/conda

RUN git clone --recursive "https://github.com/rapidsai/cudf" /opt/cudf && \\
    cd /opt/cudf

RUN cd /opt/cudf && \\
    mkdir -p cpp/build && \\
    cd cpp/build && \\
    cmake .. -DCMAKE_INSTALL_PREFIX=${CONDA_PREFIX} -DCMAKE_CXX11_ABI=ON && \\
    make -j

RUN cd /opt/cudf/cpp/build && \\
    make install && \\
    make python_cffi && \\
    make install_python && \\
    cd ../../python && \\
    python setup.py build_ext --inplace && \\
    python setup.py install

RUN git clone "https://github.com/rapidsai/dask-cudf" /opt/dask-cudf && \\
    cd /opt/dask-cudf && \\
    python setup.py install

#endif // __CUDF__
